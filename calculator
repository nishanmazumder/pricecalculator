        <script type="text/javascript">
            // User Budget
            function nmUserBudget() {
                var userPay = document.getElementById('nmBudget').value;
                var userPayCalculate = (userPay / 100) * 25;
                document.getElementById('nmBudgetCalRes').value = userPayCalculate;
            }

            // Duration 3
            function nmDur3() {
                var nmDur3 = document.getElementById('nmMonth3').value;
                var nmMainPayment = document.getElementById('nmBudget').value;
                var nmDepos = document.getElementById('nmBudgetCalRes').value;
                var nmMontPay = (nmMainPayment - nmDepos) / 3;


                //console.log(nmDur3);

                if (nmDepos === null || nmDepos === '') {
                    document.getElementById('nmMonPayRes').value = 0;
                    document.getElementById('nmDurationRes').value = '3 months';
                } else {
                    document.getElementById('nmMonPayRes').value = nmMontPay;
                    document.getElementById('nmDurationRes').value = '3 months';
                }
            }

            function nmDur6() {
                var nmDur6 = document.getElementById('nmMonth6').value;
                var nmMainPayment = document.getElementById('nmBudget').value;
                var nmDepos = document.getElementById('nmBudgetCalRes').value;
                var nmMontPay = (nmMainPayment - nmDepos) / 6;

                if (nmDepos === null || nmDepos === '') {
                    document.getElementById('nmMonPayRes').value = 0;
                    document.getElementById('nmDurationRes').value = '6 months';
                } else {
                    document.getElementById('nmMonPayRes').value = nmMontPay;
                    document.getElementById('nmDurationRes').value = '6 months';
                }
            }

            function nmDur9() {
                var nmDur9 = document.getElementById('nmMonth9').value;
                var nmMainPayment = document.getElementById('nmBudget').value;
                var nmDepos = document.getElementById('nmBudgetCalRes').value;
                var nmMontPay = (nmMainPayment - nmDepos) / 9;

                if (nmDepos === null || nmDepos === '') {
                    document.getElementById('nmMonPayRes').value = 0;
                    document.getElementById('nmDurationRes').value = '9 months';
                } else {
                    document.getElementById('nmMonPayRes').value = nmMontPay;
                    document.getElementById('nmDurationRes').value = '9 months';
                }
            }

            function nmDur12() {
                var nmDur12 = document.getElementById('nmMonth12').value;
                var nmMainPayment = document.getElementById('nmBudget').value;
                var nmDepos = document.getElementById('nmBudgetCalRes').value;
                var nmMontPay = (nmMainPayment - nmDepos) / 12;

                if (nmDepos === null || nmDepos === '') {
                    document.getElementById('nmMonPayRes').value = 0;
                    document.getElementById('nmDurationRes').value = '12 months';
                } else {
                    document.getElementById('nmMonPayRes').value = nmMontPay;
                    document.getElementById('nmDurationRes').value = '12 months';
                }
            }









        </script>




